<p id="notice"><%= notice %></p>

	
	<div class="productbox">
	  
		<div id="productimage">
		  <%= image_tag @product.image_url, :style => 'height: 120px; width: 120px;' %>
		</div>
	
		<div id="productdetails">
			
			<p class="detailbox">
			  <strong>Name:</strong>
			  <%= @product.name %>
			</p>

			<p class="detailbox">
			  <strong>Description:</strong>
			  <%= @product.description %>
			</p>
			
			<p class="detailbox">
			  <strong>Color:</strong>
			  <%= @product.color %>
			</p>
		
			<p class="detailbox"> 
			 <strong>Price:</strong>
			 <%= number_to_currency(@product.price) %>
			</p>
			
		</div>
		
	</div>
	
	<div style="margin-top: 20%">
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
	</div>
	

